<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net461;netstandard1.1;netstandard2.0;netstandard2.1</TargetFrameworks>
    <AssemblyVersion>0.1</AssemblyVersion>
    <VersionPrefix>0.1.0</VersionPrefix>
    <FileVersion>$(VersionPrefix)</FileVersion>
    <Description>Simple parsers and test resources.</Description>
    <PackageTags>graph;graphviz;dot</PackageTags>
    <SignAssembly>true</SignAssembly>
    <RootNamespace>Ubiquitous.Workbench</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="IndexedGraphs\*.gv" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="IndexedGraphs\*.gv" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Ubiquitous.Primitives\Ubiquitous.Primitives.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeQuality.Analyzers" Version="2.9.4" PrivateAssets="all" />
    <PackageReference Include="Microsoft.NetCore.Analyzers" Version="2.9.4" PrivateAssets="all" />
    <PackageReference Condition="'$(TargetFramework)' == 'net461'" Include="System.Memory" Version="4.5.3" />
    <PackageReference Condition="'$(TargetFramework)' == 'netstandard1.1'" Include="System.Memory" Version="4.5.3" />
    <PackageReference Condition="'$(TargetFramework)' == 'netstandard2.0'" Include="System.Memory" Version="4.5.3" />
    <PackageReference Include="Text.Analyzers" Version="2.6.4" PrivateAssets="all" />
  </ItemGroup>
</Project>
